<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_app"
    android:isScrollContainer="true"
    android:alpha="0.9"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/appimg"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/orange_logo"
            android:layout_marginStart="50dp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:id="@+id/TVScreen"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@color/Blue"
                android:elevation="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/imgtv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/TV"
                    android:textColor="@color/White"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/VideClubLayout"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@color/Purple"
                android:elevation="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/imgvideo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/VideoClub"
                    android:textColor="@color/White"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/SettingsLayout"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@color/DarkOrange"
                android:elevation="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/settingsImg"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/imgsettings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/Settings"
                    android:textColor="@color/White"
                    android:textSize="30sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>
